---
import Bubbles from "./Bubbles.astro";

export interface Props {
  backgroundColour: string;
  bubbleColour: string;
}

const { backgroundColour, bubbleColour } = Astro.props;
---

<section>
  <div class="container">
    <Bubbles bubbleColour={bubbleColour} />
    <div class="background"></div>
    <slot />
  </div>
</section>

<style define:vars={{ backgroundColour }}>
  section {
    overflow: hidden;
    height: 100vh;
    scroll-snap-align: start;
  }

  .container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .background {
    background-color: var(--backgroundColour);
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    pointer-events: "none";
    overflow: hidden;

    z-index: -10;
  }
</style>
